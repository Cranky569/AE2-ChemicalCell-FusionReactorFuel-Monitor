local bridge = peripheral.find("me_bridge")
local monitor = peripheral.find("monitor")

if not bridge then error("No ME-Bridge found!") end
if not monitor then error("No monitor found!") end

-- List of Mekanism Generators items to show
local itemsToShow = {
    "mekanismgenerators:tritium",
    "mekanismgenerators:deuterium",
    "mekanismgenerators:fusion_fuel"
}

-- Color mapping
local function getColorForItem(name)
    if name == "mekanismgenerators:tritium" then
        return colors.green
    elseif name == "mekanismgenerators:deuterium" then
        return colors.red
    elseif name == "mekanismgenerators:fusion_fuel" then
        return colors.purple
    else
        return colors.white
    end
end

-- Format name nicely
local function formatName(name)
    return name:gsub("mekanismgenerators:", ""):gsub("_", " "):gsub("^%l", string.upper)
end

local function displayItems()
    monitor.clear()
    monitor.setCursorPos(1,1)
    monitor.setTextColor(colors.yellow)
    monitor.write("Fusion Reactor Fuel")

    local line = 3 -- leave one blank line

    local allItems = bridge.getItems()
    if not allItems or #allItems == 0 then
        monitor.setCursorPos(1,line)
        monitor.setTextColor(colors.white)
        monitor.write("No items found.")
        return
    end

    for _, itemName in ipairs(itemsToShow) do
        local found = false
        for _, item in ipairs(allItems) do
            if item.name == itemName then
                monitor.setCursorPos(1,line)
                monitor.setTextColor(getColorForItem(itemName))
                monitor.write(string.format("%s: %d", formatName(itemName), item.amount))
                line = line + 1
                found = true
                break
            end
        end
        if not found then
            monitor.setCursorPos(1,line)
            monitor.setTextColor(getColorForItem(itemName))
            monitor.write(string.format("%s: 0", formatName(itemName)))
            line = line + 1
        end
    end
end

-- Main loop
while true do
    displayItems()
    sleep(5)
end
