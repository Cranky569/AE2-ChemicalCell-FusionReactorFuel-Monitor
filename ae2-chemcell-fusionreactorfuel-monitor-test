-- Peripherals
local mon     = peripheral.find("monitor") -- Find the connected monitor
local reactor = peripheral.find("fusionreactorport") 
               or peripheral.find("fusion_reactor_port") 
               or peripheral.find("port") -- try common variations

-- Check if peripherals exist
if not mon then error("Monitor not found!") end
if not reactor then error("Fusion Reactor Port not found!") end

-- Optional: clear monitor and set text scale
mon.setTextScale(2)
mon.clear()

-- Debug output on monitor
mon.setCursorPos(1,1)
mon.setTextColor(colors.white)
mon.write("Fusion Reactor Port connected successfully!")

-- Here you can start adding functionality to read reactor data
